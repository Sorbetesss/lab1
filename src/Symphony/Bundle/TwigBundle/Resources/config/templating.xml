<?xml version="1.0" ?>
<container xmlns="http://symphony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symphony.com/schema/dic/services http://symphony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="twig.loader.filesystem" class="Symphony\Bundle\TwigBundle\Loader\FilesystemLoader">
            <argument type="service" id="templating.locator" />
            <argument type="service" id="templating.name_parser" />
            <argument>%kernel.project_dir%</argument>
            <tag name="twig.loader"/>
        </service>

        <service id="templating.engine.twig" class="Symphony\Bundle\TwigBundle\TwigEngine">
            <argument type="service" id="twig" />
            <argument type="service" id="templating.name_parser" />
            <argument type="service" id="templating.locator" />
        </service>
    </services>
</container>
