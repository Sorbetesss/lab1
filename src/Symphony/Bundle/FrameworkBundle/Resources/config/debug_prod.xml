<?xml version="1.0" ?>

<container xmlns="http://symphony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symphony.com/schema/dic/services http://symphony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="debug.error_handler.throw_at">-1</parameter>
    </parameters>

    <services>
        <defaults public="false" />

        <service id="debug.debug_handlers_listener" class="Symphony\Component\HttpKernel\EventListener\DebugHandlersListener">
            <tag name="kernel.event_subscriber" />
            <tag name="monolog.logger" channel="php" />
            <argument>null</argument><!-- Exception handler -->
            <argument type="service" id="logger" on-invalid="null" />
            <argument>-1</argument><!-- Log levels map for enabled error levels -->
            <argument>%debug.error_handler.throw_at%</argument>
            <argument>true</argument>
            <argument type="service" id="debug.file_link_formatter"></argument>
            <argument>true</argument>
        </service>

        <service id="debug.file_link_formatter" class="Symphony\Component\HttpKernel\Debug\FileLinkFormatter">
            <argument>%debug.file_link_format%</argument>
        </service>
        <service id="Symphony\Component\HttpKernel\Debug\FileLinkFormatter" alias="debug.file_link_formatter" />
    </services>
</container>
