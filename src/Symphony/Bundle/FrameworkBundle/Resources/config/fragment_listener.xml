<?xml version="1.0" ?>

<container xmlns="http://symphony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symphony.com/schema/dic/services http://symphony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="fragment.listener" class="Symphony\Component\HttpKernel\EventListener\FragmentListener">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="uri_signer" />
            <argument>%fragment.path%</argument>
        </service>
    </services>
</container>
