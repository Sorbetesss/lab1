{
    "name": "symphony/monolog-bridge",
    "type": "symphony-bridge",
    "description": "Symphony Monolog Bridge",
    "keywords": [],
    "homepage": "https://symphony.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabien Potencier",
            "email": "fabien@symphony.com"
        },
        {
            "name": "Symphony Community",
            "homepage": "https://symphony.com/contributors"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "monolog/monolog": "~1.19",
        "symphony/http-kernel": "~3.4|~4.0"
    },
    "require-dev": {
        "symphony/console": "~3.4|~4.0",
        "symphony/event-dispatcher": "~3.4|~4.0",
        "symphony/security-core": "~3.4|~4.0",
        "symphony/var-dumper": "~3.4|~4.0"
    },
    "conflict": {
        "symphony/http-foundation": "<3.4"
    },
    "suggest": {
        "symphony/http-kernel": "For using the debugging handlers together with the response life cycle of the HTTP kernel.",
        "symphony/console": "For the possibility to show log messages in console commands depending on verbosity settings. You need version ~2.3 of the console for it.",
        "symphony/event-dispatcher": "Needed when using log messages in console commands.",
        "symphony/var-dumper": "For using the debugging handlers like the console handler or the log server handler."
     },
    "autoload": {
        "psr-4": { "Symphony\\Bridge\\Monolog\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "4.1-dev"
        }
    }
}
