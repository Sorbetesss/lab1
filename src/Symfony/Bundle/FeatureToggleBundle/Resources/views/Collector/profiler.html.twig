{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block page_title 'Feature Toggle' %}

{% block toolbar %}
    {% if 0 < collector.toggles|length %}
        {% set icon %}
            <img alt="Feature Toggle" src="data:image/png;base64," />
            <span class="sf-toolbar-value">{{ collector.toggles|length }}</span>
            <span class="sf-toolbar-label">Toggles</span>
        {% endset %}

        {% set text %}
            <div class="sf-toolbar-info-group">
                <div class="sf-toolbar-info-piece">
                    <b>Toggles</b>
                    {% for toggle in collector.toggles %}
                        <span class="sf-toolbar-status sf-toolbar-status-{{ toggle['result'] ? 'green' : 'red' }}">
                            {{ toggle['feature'] }}
                        </span>
                    {% endfor %}
                </div>
            </div>
        {% endset %}

        {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { link: profiler_url }) }}
    {% endif %}
{% endblock %}

{% block menu %}
    <span class="label {{ collector.toggles|length is same as(0) ? 'disabled' }}">
        <span class="icon"><img alt="Feature Toggle" src="data:image/png;base64," /></span>
        <strong>Feature toggle</strong>
    </span>
{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
        tr.toggle-check {
            position: relative;
        }
        tr.toggle-check > td:first-child:before {
            border-radius: 0;
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
        }
        tr.toggle-check-grant > td:first-child:before {
            background: var(--green-500);
        }
        tr.toggle-check-deny > td:first-child:before {
            background: var(--red-500);
        }
        .badge {
            color: var(--white);
            display: inline-block;
            text-align: center;
            min-width: 60px;
        }
        .badge.badge-grant {
            background-color: var(--green-500);
        }
        .badge.badge-deny {
            background-color: var(--red-500);
        }
        .badge.badge-abstain {
            background-color: var(--gray-500);
        }
        .strategy-class {
            color: var(--color-muted);
            font-style: italic;
        }
    </style>
{% endblock %}

{% block panel %}
    <h2>Feature toggles</h2>
    {% if collector.toggles|length > 0 %}
        <table>
            <thead>
            <tr>
                <th>Feature</th>
                <th>Strategies</th>
            </tr>
            </thead>
            <tbody>
            {% for toggle in collector.toggles %}
                {% set result = toggle['result'] ? 'grant' : 'deny' %}
                <tr class="toggle-check toggle-check-{{ result }}">
                    <td>{{ toggle['feature'] }}</td>
                    <td>
                        <span class="badge badge-{{ result }}">
                            {{ result|capitalize }}
                            {%- if toggle['computes'] is empty %}
                                (unknown)
                            {% elseif (toggle['computes']|first).result.name|lower is same as 'abstain' %}
                                (default)
                            {% endif %}
                        </span>
                        {% for compute in toggle['computes'] %}
                            <div>
                                {{ _self.indent(compute['level']) }}
                                <span class="badge badge-{{ compute['result'].name|lower }}">{{ compute['result'].name }}</span>
                                {{ compute['strategyId'] }}
                                <span class="strategy-class">{{ compute['strategyClass']|abbr_class }}</span>
                            </div>
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="empty">
            <p>No feature toggle checked</p>
        </div>
    {% endif %}
{% endblock %}

{% macro indent(level) %}
    {%- for i in 0..level -%}&nbsp;{% endfor %}L
{% endmacro %}
