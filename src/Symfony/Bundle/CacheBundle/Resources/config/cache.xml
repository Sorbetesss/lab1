<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cache.enabled">true</parameter>
        <parameter key="cache.profiler.class">Symfony\Component\Cache\CacheProfiler</parameter>
        <parameter key="data_collector.cache.class">Symfony\Bundle\CacheBundle\DataCollector\CacheDataCollector</parameter>
    </parameters>

    <services>

        <service id="data_collector.cache" class="%data_collector.cache.class%" public="false">
            <tag name="data_collector" template="CacheBundle:Collector:cache" id="cache" />
            <argument type="service" id="cache.profiler" on-invalid="ignore" />
        </service>

        <service id="cache.profiler" class="%cache.profiler.class%" public="false">
            <argument type="service" id="debug.stopwatch" />
        </service>

    </services>
</container>
