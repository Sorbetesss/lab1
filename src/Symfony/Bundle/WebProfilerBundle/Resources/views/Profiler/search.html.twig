<div class="search clearfix" id="searchBar">
    <h3>
        <span title="Search" class="sf-icon sf-search sf-medium">{{ include('@WebProfiler/Icon/search.svg') }}</span>
        Search
    </h3>
    <form action="{{ path('_profiler_search') }}" method="get">
        <label for="ip">IP</label>
        <input type="text" name="ip" id="ip" value="{{ ip }}">
        <div class="clear-fix"></div>
        <label for="method">Method</label>
        <select name="method" id="method">
            <option value=""{{ '' == method ? ' selected="selected"' : '' }}>&nbsp;</option>
            {% for m in ['DELETE', 'GET', 'HEAD', 'PATCH', 'POST', 'PUT'] %}
                <option{{ m == method ? ' selected="selected"' : '' }}>{{ m }}</option>
            {% endfor %}
        </select>
        <div class="clear-fix"></div>
        <label for="url">URL</label>
        <input type="text" name="url" id="url" value="{{ url }}">
        <div class="clear-fix"></div>
        <label for="token">Token</label>
        <input type="text" name="token" id="token" value="{{ token }}">
        <div class="clear-fix"></div>
        <label for="start">From</label>
        <input type="date" name="start" id="start" value="{{ start }}">
        <div class="clear-fix"></div>
        <label for="end">Until</label>
        <input type="date" name="end" id="end" value="{{ end }}">
        <div class="clear-fix"></div>
        <label for="limit">Limit</label>
        <select name="limit" id="limit">
            {% for l in [10, 50, 100] %}
                <option{{ l == limit ? ' selected="selected"' : '' }}>{{ l }}</option>
            {% endfor %}
        </select>

        <div class="clear-fix"></div>
        <button type="submit" class="sf-button">
            <span class="border-l">
                <span class="border-r">
                    <span class="btn-bg">SEARCH</span>
                </span>
            </span>
        </button>
        <button type="reset" class="sf-button">
            <span class="border-l">
                <span class="border-r">
                    <span class="btn-bg">RESET</span>
                </span>
            </span>
        </button>
        <div class="clear-fix"></div>
    </form>
</div>
