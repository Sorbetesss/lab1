<?xml version="1.0" encoding="UTF-8"?>
<routes>
  <route name="route_1" path="/hello/{name}" class="Symfony\Component\Routing\Route" path_regex="#^/hello(?:/(?P&lt;name&gt;[a-z]+))?$#s">
    <host>localhost</host>
    <scheme>http</scheme>
    <scheme>https</scheme>
    <method>GET</method>
    <method>HEAD</method>
    <defaults>
      <default attribute="name">Joseph</default>
    </defaults>
    <requirements>
      <requirement attribute="name">[a-z]+</requirement>
    </requirements>
    <options>
      <option name="compiler_class">Symfony\Component\Routing\RouteCompiler</option>
      <option name="opt1">val1</option>
      <option name="opt2">val2</option>
    </options>
  </route>
  <route name="route_2" path="/name/add" class="Symfony\Component\Routing\Route" path_regex="#^/name/add$#s">
    <host>localhost</host>
    <scheme>http</scheme>
    <scheme>https</scheme>
    <method>PUT</method>
    <method>POST</method>
    <options>
      <option name="compiler_class">Symfony\Component\Routing\RouteCompiler</option>
      <option name="opt1">val1</option>
      <option name="opt2">val2</option>
    </options>
  </route>
</routes>
