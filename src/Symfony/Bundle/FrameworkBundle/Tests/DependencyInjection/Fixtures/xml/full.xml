<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:app="http://symfony.com/schema/dic/symfony"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd
                        http://symfony.com/schema/dic/symfony http://symfony.com/schema/dic/symfony/symfony-1.0.xsd">

    <app:config>
        <app:csrf-protection enabled="true" field-name="_csrf" secret="s3cr3t" />
        <app:esi enabled="true" />
        <app:profiler only-exceptions="true" />
        <app:router cache-warmer="true" resource="%kernel.root_dir%/config/routing.xml" type="xml" />
        <app:session auto-start="true" class="Session" default-locale="fr" storage-id="native" name="_SYMFONY" lifetime="86400" path="/" domain="example.com" secure="true" httponly="true" />
        <app:templating cache-warmer="true" cache="/path/to/cache" assets-version="1.0.0">
            <app:loader>loader.foo</app:loader>
            <app:loader>loader.bar</app:loader>
            <app:engine id="php" />
            <app:engine id="twig" />
            <app:assets-base-url>//default.example.com</app:assets-base-url>
            <app:package name="basic" version="basic1">
                <app:base-url>//basic1.example.com</app:base-url>
                <app:base-url>//basic2.example.com</app:base-url>
                <app:base-url>//basic3.example.com</app:base-url>
                <app:base-url>//basic4.example.com</app:base-url>
            </app:package>
            <app:package name="images">
                <app:base-url secure="true">https://asdf.cloudfront.net</app:base-url>
                <app:base-url>http://images1.example.com</app:base-url>
                <app:base-url>http://images2.example.com</app:base-url>
                <app:base-url>http://images3.example.com</app:base-url>
                <app:base-url>http://images4.example.com</app:base-url>
            </app:package>
        </app:templating>
        <app:translator enabled="true" fallback="fr" />
        <app:validation enabled="true" cache="apc" />
    </app:config>
</container>
