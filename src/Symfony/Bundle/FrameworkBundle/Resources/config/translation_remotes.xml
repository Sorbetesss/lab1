<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="translation.remote_factory.abstract" class="Symfony\Component\Translation\Remote\AbstractRemoteFactory" abstract="true">
            <argument type="service" id="http_client" on-invalid="ignore" />
            <argument type="service" id="translation.loader.xliff_raw" />
        </service>

        <service id="translation.remote_factory.loco" class="Symfony\Component\Translation\Bridge\Loco\LocoRemoteFactory" parent="translation.remote_factory.abstract">
            <tag name="translation.remote_factory" />
        </service>
    </services>
</container>
