<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="twig.loader.filesystem" class="Symfony\Bundle\TwigBundle\Loader\FilesystemLoader">
            <argument type="service" id="templating.locator" />
            <argument type="service" id="templating.name_parser" />
            <argument>%kernel.project_dir%</argument>
            <tag name="twig.loader"/>
        </service>

        <service id="templating.engine.twig" class="Symfony\Bundle\TwigBundle\TwigEngine">
            <argument type="service" id="twig" />
            <argument type="service" id="templating.name_parser" />
            <argument type="service" id="templating.locator" />
        </service>

        <service id="templating.form_extension.twig" class="Symfony\Component\Form\Extension\Templating\Type\FormTypeThemeExtension">
            <argument type="service" id="twig.form.engine" />
            <argument>.html.twig</argument>
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\FormType" />
        </service>
    </services>
</container>
