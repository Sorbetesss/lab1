#!/usr/bin/env php
<?php

// Cache-Id: https://github.com/symphony/phpunit-bridge/commit/66ffffcd8a6bb23aec847c8bdfb918610399499a

if (!file_exists(__DIR__.'/vendor/symphony/phpunit-bridge/bin/simple-phpunit')) {
    echo "Unable to find the `simple-phpunit` script in `vendor/symphony/phpunit-bridge/bin/`.\nPlease run `composer update` before running this command.\n";
    exit(1);
}
if (\PHP_VERSION_ID >= 70000 && !getenv('SYMPHONY_PHPUNIT_VERSION')) {
    putenv('SYMPHONY_PHPUNIT_VERSION=6.0');
}
putenv('SYMPHONY_PHPUNIT_DIR='.__DIR__.'/.phpunit');
require __DIR__.'/vendor/symphony/phpunit-bridge/bin/simple-phpunit';
